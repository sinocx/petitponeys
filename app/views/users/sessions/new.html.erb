        </ul>
      </nav><!-- #nav-menu-container -->
    </div>
  </header><!-- End Header -->



<div class="banner image-accueil-flou">
<div class="container">
  <div class="row mt-5">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="form-login">
          <h2 style="color: white;">Connexion</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
              <%= f.input :password, required: false, placeholder: "••••••" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Se connecter",class: "btn btn-success"%>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
</div>